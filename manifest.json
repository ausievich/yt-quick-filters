{
  "manifest_version": 3,
  "name": "YouTrack Quick Filters",
  "version": "2.0.6",
  "description": "Add quick filter buttons to YouTrack Agile Boards. Create filters via a modal.",
  "icons": {
    "128": "icons/logo_128.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "include_globs": [
        "*://*youtrack*/*",   
        "*://*/youtrack/*"
      ],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}